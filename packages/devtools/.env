NEXT_PUBLIC_APP_URL=http://127.0.0.1:3000
NEXT_PUBLIC_APP_NAME=DevTools

# NextAuth
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000
AUTH_DEBUG=true

# SSO Configuration for Cross-Domain Authentication
# ENABLE_SSO: Allow SSO authentication from multiple hosts/domains
ENABLE_SSO=false
# AUTH_COOKIE_DOMAIN: Set cookie domain for subdomain sharing (e.g., ".example.com" for a.example.com and b.example.com)
# Leave empty for single domain, set to ".your-domain.com" for subdomain sharing
AUTH_COOKIE_DOMAIN=.a.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_MANAGER_USER=user_xxx
# mongo
MONGODB_URI=mongodb://root:devtools123456@devtools-mongo:27017/devtools?authSource=admin
# storage: s3、minio、cos
NEXT_PUBLIC_IMAGE_STORAGE=cos
# minio
MINIO_BASE=http://127.0.0.1:9000
MINIO_BUCKET=devtools
MINIO_ENDPOINT=devtools-minio
MINIO_PORT=9000
MINIO_SSL=false
MINIO_ACCESS_KEY=
MINIO_SECERT_KEY=
# aws s3
S3_BASE=https://image.tools.shipnowkit.com
S3_REGION=ap-southeast-1
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_ACCESS_SECERT=
# tencent cos
COS_BASE=
COS_REGION=
COS_BUCKET=
COS_DIR=
COS_SECERT_ID=
COS_SECERT_KEY=

# seo
NEXT_PUBLIC_APP_GENERATOR=dante-is-shipping
NEXT_PUBLIC_APP_GENERATOR_URL=https://github.com/dante-is-shipping
# gateway
CRAWLER_GATEWAY=http://crawler:13000
CRAWLER_AUTH_USER=root
CRAWLER_AUTH_PASSWORD=devtools123456
# google analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
